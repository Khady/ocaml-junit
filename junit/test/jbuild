(jbuild_version 1)

(executable
 ((name simple)
  (modules (simple))
  (libraries (junit))
  (flags (:standard -safe-string -short-paths))
  ))

(rule
 ((targets (simple.xml))
  (deps (simple.exe))
  (action (run ${<} ${@}))))

(alias
 ((name runtest)
  (deps (simple.exe))
  (package junit)
  (action (diff ${path:simple.expected} ${path:simple.xml}))
  ))
